<style>
    body {
        font-family: sans-serif;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
    }

    h1 {
        flex: 1 100%;
        text-align: center;
        font-size: 42px;
        color: red;
    }

    .pokemon {
        width: 170px;
        height: 200px;
        border-radius: 10px;
        margin: 10px;
        padding: 5px;
        background-color: #ffc800bf;
        box-shadow: 0 0 3px 3px #ccc;
    }

    h2 {
        text-transform: capitalize;
    }

    .imgContainer {
        margin: auto;
        width: 95px;
        height: 99px;
    }

    img {
        width: 100%;
        height: 100%;
    }

    .type {
        width: 82px;
        height: 25px;
        line-height: 25px;
        text-align: center;
        display: inline-block;
        background-color: #733491;
        border-radius: 3px;
        color: #FFF;
        text-transform: capitalize;
    }


</style>

<h1>Pokemon</h1>

{{#each pokemonArray}}

    <div class="pokemon">
        <h2>{{this.pokeName}}</h2>

        <div class="imgContainer">
            <img src="{{this.pokePic}}" alt="{{this.pokeName}}" />
        </div>
        
        {{#each this.pokeTypes}}
            <div class="type">{{this.type.name}}</div>
        {{/each}}
    </div>

{{/each}}

