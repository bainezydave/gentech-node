<h1>Blogs</h1>

<a href="/blogs/new" class="waves-effect waves-light btn">
    <i class="material-icons left">create</i>New Blog
</a>

{{#each blogs}}
    <div class="row">
        <div class="col s12">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">{{ this.title }}</span>
                    <span class="card-time">{{ this.timestamp }}</span>
                    <p>{{ this.body }}</p>
                </div>
                <div class="card-action">
                    <a href="/blog/{{this._id}}?_method=DELETE">Delete</a>
                </div>
            </div>
        </div>
    </div>
{{!-- <a href="/authors/{{this._id}}">View Author</a> --}}
{{/each}}
